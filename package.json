{
  "name": "clean-architecture-react",
  "description": "Clean Architecture example using React",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "author": "mathessatoshi",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "build": "tsc -b && vite build",
    "lint": "eslint \"src/**/*\" --fix",
    "coverage": "vitest run --coverage",
    "server": "json-server server.json --watch",
    "clean": "rimraf .next coverage",
    "test": "vitest",
    "cz": "cz",
    "prepare": "husky"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "axios": "^1.7.9",
    "inquirer": "^12.5.0",
    "iti": "^0.7.0",
    "json-server": "^1.0.0-beta.3",
    "react": "19.0.0-rc.0",
    "react-dom": "19.0.0-rc.0",
    "react-router-dom": "^7.1.3",
    "tailwindcss": "^4.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/cz-commitlint": "^19.6.1",
    "@commitlint/types": "^19.5.0",
    "@eslint/js": "^9.17.0",
    "@faker-js/faker": "^9.3.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/axios": "^0.14.4",
    "@types/faker": "^6.6.11",
    "@types/node": "^22.10.5",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "5.7.3",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "vite-plugin-environment": "^1.1.3",
    "vitest": "^3.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matheussatoshi/clean-architecture-react"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@commitlint/cz-commitlint"
    }
  },
  "keywords": [
    "react",
    "typescript",
    "tdd",
    "react-testing-library",
    "solid",
    "clean-architecture",
    "clean-code"
  ]
